<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= title %></title>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <nav><h1><%= title %></h1></nav>

    <div class="container">
      <div class="messages">
        <% messages.forEach((message, index) => { %>
        <div class="message">
          <a href="/message/<%= index  %>">
            <p class="user"><%= message.user %></p>
            <p class="text"><%= message.text %></p>
            <p class="date"><%= message.added %></p>
            <a href="/message/<%= index  %>"></a>
          </a>
        </div>
        <% }); %>
      </div>
    </div>
    <a class="newMessage" href="/new">
      <img src="add.png" alt="add message"
    /></a>
  </body>
</html>
